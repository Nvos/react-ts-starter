{
  "name": "boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "bundle:stats": "react-app-rewired build --analyze",
    "test": "react-app-rewired test",
    "storybook": "start-storybook --quiet -p 9010  -s public",
    "storybook:build": "build-storybook -s public",
    "lint": "eslint ./src/** --ext .ts,.tsx",
    "lint:fix": "eslint ./src/** --ext .ts,.tsx --fix",
    "format:fix": "prettier --write",
    "e2e:open": "cypress open",
    "ci:lint": "eslint ./src/** --ext .ts,.tsx",
    "ci:test": "npm run test",
    "ci:e2e": "start-server-and-test start http://localhost:3000 test && ./node_modules/.bin/cypress run"
  },
  "dependencies": {
    "@loadable/component": "^5.10.1",
    "@storybook/react": "^5.1.9",
    "@styled-system/theme-get": "^5.0.12",
    "final-form": "^4.18.5",
    "history": "^4.9.0",
    "i18next": "^17.0.7",
    "i18next-xhr-backend": "^3.0.0",
    "immer": "^9.0.6",
    "react": "~16.9.0",
    "react-dom": "~16.9.0",
    "react-final-form": "^6.3.0",
    "react-hot-loader": "^4.12.11",
    "react-i18next": "^10.12.2",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "~3.1.1",
    "react-use-websocket": "^0.9.8",
    "redux": "^4.0.4",
    "redux-observable": "^1.1.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "rxjs": "^6.5.2",
    "styled-components": "~5.0.0-beta.8",
    "styled-system": "^5.1.0",
    "typesafe-actions": "~5.0.0-3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-typescript": "^7.6.0",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@cypress/webpack-preprocessor": "^4.1.0",
    "@hot-loader/react-dom": "^16.9.0",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-centered": "^5.1.10",
    "@storybook/addon-info": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addon-notes": "^5.1.10",
    "@storybook/addon-options": "^5.1.9",
    "@storybook/addon-storysource": "^5.1.10",
    "@storybook/addons": "^5.1.9",
    "@testing-library/react": "^9.1.2",
    "@types/cypress-axe": "^0.4.0",
    "@types/history": "^4.7.2",
    "@types/jest": "^24.0.15",
    "@types/loadable__component": "^5.9.0",
    "@types/node": "^12.0.10",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.5",
    "@types/react-redux": "^7.1.2",
    "@types/react-router-dom": "^4.3.4",
    "@types/storybook__addon-actions": "^3.4.3",
    "@types/storybook__addon-links": "^3.3.5",
    "@types/storybook__addon-options": "^4.0.2",
    "@types/storybook__react": "^4.0.2",
    "@types/styled-components": "^4.1.16",
    "@types/styled-system": "^4.2.2",
    "@types/webpack": "^4.39.1",
    "axe-core": "^3.3.0",
    "babel-loader": "^8.0.6",
    "customize-cra": "^0.2.14",
    "cypress": "^3.4.0",
    "cypress-axe": "^0.5.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^3.0.3",
    "jest-image-snapshot": "^2.9.0",
    "jest-styled-components": "^6.3.3",
    "lint-staged": "^8.2.1",
    "mock-socket": "^9.0.0",
    "prettier": "^1.18.2",
    "react-app-rewired": "^2.1.3",
    "storybook-addon-jsx": "^7.1.2",
    "typescript": "~3.5.2",
    "webpack-bundle-analyzer": "^3.3.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run format:fix",
      "npm run lint:fix",
      "npm run test -- --watchAll=false --findRelatedTests",
      "git add"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/setupTests.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
